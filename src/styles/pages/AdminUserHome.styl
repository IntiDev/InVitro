.userHome
  display: grid
  grid-template-columns: 0.2fr minmax(250px, 1fr);
  width: 90%;
  max-width: 1400px;
  margin: 0px auto

  &__table
    padding: 15px 20px

  &__tableContainer
    max-height: 60vh
    overflow-y: scroll 

  &__tableActions
    display: flex
    justify-content: space-between

    &__buttons
      display: grid
      grid-template-columns: 1fr 1fr
      grid-column-gap: 10px
      
    &__filter
      width: 300px
      display: flex
      justify-content: space-between
      align-items: center
      
      input
        height 26px

  .addUser
    display: none

  &__mobileButtons
    display: flex
    /* grid-template-columns: 1fr 1fr    */     

@media screen and (max-width: 1250px)

  .userHome
    grid-template-columns: minmax(200px, 1fr)
    justify-self: center
    
    &__table 
      padding: 15px 10px 0px; 

  .sideMenu
    display: none


@media (max-width: 720px)
  .userHome

    .addUser
        display: block
        color: orange
        font-size: 48px
        margin: 10px

    &__tableActions__buttons
      display: none



