@import 'General.styl'

.container
  max-height: 64vh
  overflow-y: scroll

.Table
  width: 100%
  font-size 16px
  border-spacing 0
  border-collapse collapse
  color dark-background-text
  position: relative
   
  th
    text-align: start
    font-weight 400
    padding 15px 20px
    position: sticky;
    top: 0
    color secondary-color
    background-color primary-color
    box-shadow 0 3px 3px divider-color

  &__row:hover
      background-color: lightgray

  &__desactiveRow
    background-color: #e6e4e4

  &__cell
    border-bottom 2px solid divider-color
    font-size 14px
    padding 15px 20px

  &__actions
    text-align center
    border-bottom 2px solid divider-color

  &__actionButton
    color dark-primary-color
    padding 0 5px

.material-icons:hover
  color accent-color
  cursor pointer


@media (max-width: 1250px)
  .Table
    &__header__Celular
      display: none

  .cell_phone
      display: none
 

@media (max-width: 700px)

  .Table
    
    thead
      display: none  

    tr 
      display: grid
      grid-template-areas: "id state actions" "name cellphone actions"  
      grid-template-columns: 0.4fr 0.4fr 0.2fr
      grid-template-rows: auto auto
      border-bottom: 2px solid divider-color

    td 
      padding: 8px

    &__cell
      border-bottom: 0px

      &.cell_email
        display: none
      &.cell_role
        display: none
      &.cell_cedula
        grid-area:id
      &.cell_name
        font-weight: bold
        grid-area:name
      &.cell_state
        grid-area:state
      &.cell_phone
        display: block
        grid-area:cellphone

    &__actions
      text-align center
      border-bottom: 0px

      &.cell_actions
        grid-area:actions
        align-self: center    



    
  