@import 'General.styl'

.LoginForm
  display flex
  justify-content flex-start
  align-items center
  flex-direction column
  background-color primary-color
  border-radius 10px
  padding 25px
  color secondary-color
  min-height 250px
  max-width 250px
  margin 25px

  &__logo
    display: none

  &__title
    text-transform uppercase
    font-size 22px
    letter-spacing: 0.1em

  &__input
    background-color secondary-color
    border 0
    border-radius 3px
    color dark-background-text
    height 25px
    margin 5px 0
    padding 5px 10px

@media screen and (max-width: 1000px)

  .LoginForm

    &__logo
      display: block
      margin-bottom: 20px

    &__title
      display: none
