@import General

.medicalHistoryForm
  width: 50%
  padding: 40px
  display: grid
  color: dark-background-text
  border: 1px solid dark-background-text
  text-align: center

  &__form
    display: grid
    grid-template-columns: 1fr 1fr
    grid-gap: 16px
    text-align: left

    label 
      display: grid

  &__previousVisits__title
    display: flex
    justify-content: space-between
    align-items: baseline

    a
      margin-left: 20px
  
  &__submitBtn
    background-color: accent-color
    margin-top: 20px

